<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <!-- Materials determine-->


    <material name='white'>
        <color rgba = '1 1 1 1'/>
    </material>


    <material name='black'>
        <color rgba = '0 0 0 0'/>
    </material>

    <material name='red'>
        <color rgba = '1 0 0 0.8'/>
    </material>

    <material name='blue'>
        <color rgba = '0 0 1 0.6'/>
    </material>

    <!-- Base link-->
    <link name='base_link'>

    </link>


    <!-- Chassis -->
    <joint name='chassis_joint' type='fixed'>
        <parent link='base_link'/>
        <child link='chassis'/>
        <origin xyz=' 0 0 0'/>
    </joint>

    <link name='chassis'>
        <visual>
            <origin xyz= '0 0 0'/>
            <geometry>
                <box size= '1 0.7 0.5'/>
            </geometry>
            <material name='white'/>
        </visual>
        <collision>
            <origin xyz= '0 0 0'/>
            <geometry>
                <box size= '1 0.7 0.5'/>
            </geometry>
        </collision>
    </link>




    <!-- Wheels -->

    <!-- LEFT FRONT -->
    <joint name="left_front_wheel_joint" type='continuous'>
        <parent link='base_link'/>
        <child link='left_front_wheel'/>
        <origin xyz = '-0.5 -0.35 -0.25' rpy='-${pi/2} 0 0'/>
        <axis xyz='0 0 -1'/>
    </joint>


    <link name='left_front_wheel'>
        <visual>
            <geometry>
                <cylinder radius='0.15' length='0.04'/>
            </geometry> 
            <material name='blue'/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius='0.15' length='0.04'/>
            </geometry>
        </collision>
    </link>

    <!-- RIGHT FRONT -->

    <joint name="right_front_wheel_joint" type='continuous'>
        <parent link='base_link'/>
        <child link='right_front_wheel'/>
        <origin xyz = '-0.5 0.35 -0.25' rpy='${pi/2} 0 0'/>
        <axis xyz='0 0 1'/>
    </joint>


    <link name='right_front_wheel'>
        <visual>
            <geometry>
                <cylinder radius='0.15' length='0.04'/>
            </geometry> 
            <material name='blue'/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius='0.15' length='0.04'/>
            </geometry>
        </collision>
    </link>

    <!-- RIGHT REAR -->

    <joint name="right_rear_wheel_joint" type='continuous'>
        <parent link='base_link'/>
        <child link='right_rear_wheel'/>
        <origin xyz = '0.5 0.35 -0.25' rpy='${pi/2} 0 0'/>
        <axis xyz='0 0 1'/>
    </joint>


    <link name='right_rear_wheel'>
        <visual>
            <geometry>
                <cylinder radius='0.15' length='0.04'/>
            </geometry> 
            <material name='blue'/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius='0.15' length='0.04'/>
            </geometry>
        </collision>
    </link>

    <!-- LEFT REAR -->

    <joint name="left_rear_wheel_joint" type='continuous'>
        <parent link='base_link'/>
        <child link='left_rear_wheel'/>
        <origin xyz = '0.5 -0.35 -0.25' rpy='-${pi/2} 0 0'/>
        <axis xyz='0 0 -1'/>
    </joint>


    <link name='left_rear_wheel'>
        <visual>
            <geometry>
                <cylinder radius='0.15' length='0.04'/>
            </geometry> 
            <material name='blue'/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius='0.15' length='0.04'/>
            </geometry>
        </collision>
    </link>
</robot>
